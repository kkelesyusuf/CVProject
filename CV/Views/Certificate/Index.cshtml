@model List<CV.Models.Entity.Certificates>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        </div><!-- /.card-header -->
                    <div class="card-body">

                        @foreach (var item in Model)
                        {
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    <div class="time-label">
                                        <a href="/Certificate/UpdateCertificate/@item.ID" class="btn btn-success">
                                        <span class="bg-success">
                                            @item.Date
                                        </span></a> 
                                    </div>
                                    <!-- /.timeline-label -->   
                                    <!-- timeline item -->
                                    <div>
                                        <div class="timeline-item">
                                            <div class="timeline-body">
                                                @item.Description
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
    </section>
</body>
</html>